{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SerilogStepUp": {
    "Mode": "Auto",
    "BaseLevel": "Warning",
    "StepUpLevel": "Information",
    "DurationSeconds": 60,
    "CaptureRequestBody": true,
    "MaxBodyCaptureBytes": 4096,
    "RedactionRegexes": [
      "password=[^&]*",
      "authorization:.*"
    ],
    "EnableOtlpExporter": true,
    "EnableConsoleLogging": true
  }
}